{
    "env": {
          "es6": true
        , "node": true
        , "mocha": true
    },
    "globals": {
        "dbg": true,
        "expect": false
      
          , "describe"   : false,
          "it"         : false,
          "before"     : false,
          "beforeEach" : false,
          "after"      : false,
          "afterEach"  : false

          , "import" : false
          },

  "plugins": [
    "vue"
],
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
      ],
    "parserOptions": {
       "ecmaVersion": 2017
      , "sourceType": "module"
      
    }
  , "rules": {
      "indent": [
          "error",
          4
      ],
      "linebreak-style": [
        "warn"
        , "unix"
      ],
      "quotes": [
          "warn",
          "single"
      ],
      "semi": [
          "warn",
          "always"
      ]
      , "no-console" : [
          "off"
      ]
      , "comma-style" : [
            "warn"
          , "first"
      ]
      , "vue/max-attributes-per-line": [
        "warn",
        {
          "singleline": 4,
          "multiline": {
            "max": 4,
            "allowFirstLine": true
          }
        }
      ]
      , "vue/v-bind-style": [
        "warn",
        "shorthand"
      ]
      , "vue/v-on-style" : [
        "warn",
        "longform"
      ]
    }

    
  
}
