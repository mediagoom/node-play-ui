{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Webpack",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js"
            , "args": ["--mode", "development"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            , "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },{
            "type": "node",
            "request": "launch",
            "name": "Webpack Unit-test",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js"
            , "args": ["--config"
                , "./webpack.config.js", "--entry", "./test/unit/components/operation.spec.js"
                , "--output", "./bin/unittest.js", "--mode", "development", "--target", "node"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            /*"console": "integratedTerminal"
            , "runtimeArgs": [
                "--preserve-symlinks"
            
            ]*/
            
        }
        ,{
            "type": "node",
            "request": "launch",
            "name": "nyc Unit-test",
            "program": "${workspaceFolder}/node_modules/nyc/bin/nyc.js"
            , "args": [ "--exclude-after-remap", "false"
                , "./node_modules/.bin/mocha", "--require"
                , "./test/unit/setup.js", "./bin/unittest.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            , "runtimeArgs": [
                "--preserve-symlinks"
            ]
            
        }
        ,{
            "type": "node",
            "request": "launch",
            "name": "nyc html",
            "program": "${workspaceFolder}/node_modules/nyc/bin/nyc.js"
            , "args": [
                "--exclude-after-remap", "true", "report", "--reporter=html"
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            /*"console": "integratedTerminal"
            , "runtimeArgs": [
                "--preserve-symlinks"
            ]
            */
        }
    ]
}